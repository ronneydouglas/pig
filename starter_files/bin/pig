#!/usr/bin/env ruby

require_relative '../lib/pig'
require_relative '../lib/player'

players = []

ARGV.each do |arg|
  player_class = arg
  if defined?(player_class)
    players.push(Module.const_get(player_class).new(arg.gsub(/Player$/, "")))
  end
end

if players.length < 2
  players.push(FiftyPlayer.new("Fitty Cent"))
end
if players.length == 1
  players.push(Uno.new("Wan Tyme"))
end

pig = Pig.new(*players, games: 1000, silent: true)
pig.run
